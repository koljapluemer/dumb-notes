{
  "name": "dumb-notes",
  "version": "1.0.0",
  "description": "Minimal plaintext note-taker (Electron + Vue)",
  "homepage": "https://example.com/dumb-notes",
  "main": "dist/main/main.js",
  "scripts": {
    "dev:renderer": "vite --config src/renderer/vite.config.ts",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "start:dev": "VITE_DEV_SERVER_URL=http://localhost:5173 ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build --config src/renderer/vite.config.ts",
    "copy:renderer": "rm -rf dist/renderer && mkdir -p dist && cp -r src/renderer/dist dist/renderer",
    "build": "npm run build:renderer && npm run build:main && npm run copy:renderer",
    "package:deb": "npm run build && electron-builder --linux deb",
    "package:appimage": "npm run build && electron-builder --linux AppImage",
    "start": "npm run build:main && ELECTRON_DISABLE_SANDBOX=1 electron .",
    "clean": "rm -rf dist release src/renderer/dist",
    "typecheck": "vue-tsc --noEmit --project src/renderer/tsconfig.app.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": {
    "name": "Dumb Notes",
    "email": "dev@example.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.10.2",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "daisyui": "^5.5.5",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "lucide-vue-next": "^0.554.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.4"
  },
  "dependencies": {},
  "build": {
    "appId": "com.example.dumbnotes",
    "productName": "Dumb Notes",
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Utility",
      "maintainer": "Kolja Sam <contact@koljasam.com>",
      "icon": "logo.png",
      "executableArgs": [
        "--no-sandbox"
      ]
    }
  }
}
